{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2015", "es2016", "es2017", "dom.iterable", "esnext"],
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "moduleResolution": "Node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": [
    "packages/*/src/**/*.{ts,tsx,js,jsx,mjs}",
    "common/*/src/**/*.{ts,tsx,js,jsx,mjs}",
    "site/**/*.{ts,tsx,js,jsx,mjs}",
    "config/**/*.{ts,tsx,js,jsx,mjs}",
    "scripts/**/*.{ts,tsx,js,jsx,mjs}",
    "__tests__",
    "eslint.config.js",
    "prettier.config.mjs",
    "commitlint.config.js",
    "src/**/*.{ts,tsx,js,jsx,mjs}",
    "src/*.{ts,tsx,js,jsx,mjs}"
  ],
  "exclude": ["node_modules", "dist", "coverage", "docs", "example", "site/**/*.{vue}", "site/with-vue3/src/main.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
