{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017", "dom.iterable", "esnext"],
    "allowJs": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": [
    "packages",
    "common",
    "site",
    "config",
    "scripts",
    "__tests__",
    ".eslintrc.js",
    ".prettier.js",
    "commitlint.config.js"
  ],
  "exclude": ["node_modules", "dist", "coverage", "docs", "example"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
