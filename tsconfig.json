{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017", "dom.iterable", "esnext"],
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "moduleResolution": "Node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true
  },
  "include": [
    "packages/*/src/**/*.{ts,tsx,js,jsx,mjs}",
    "common/*/src/**/*.{ts,tsx,js,jsx,mjs}",
    "site/**/*.{ts,tsx,js,jsx,mjs}",
    "config/**/*.{ts,tsx,js,jsx,mjs}",
    "scripts/**/*.{ts,tsx,js,jsx,mjs}",
    "__tests__",
    ".eslintrc.js",
    ".prettier.js",
    "commitlint.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "docs",
    "example",
    "site/**/*.{vue}"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
