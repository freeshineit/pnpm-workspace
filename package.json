{
  "name": "@skax/pnpm-workspace",
  "version": "0.0.0",
  "description": "pnpm workspace",
  "scripts": {
    "dev": "pnpm run --parallel --filter '*' dev",
    "dev:store": "pnpm run --filter @ak2021/store dev",
    "dev:ui": "pnpm run --filter @ak2021/react-ui dev",
    "dev:components": "pnpm run --filter @ak2021/web-components dev",
    "dev:react": "pnpm run --filter @site/with-react dev",
    "dev:vue2": "pnpm run --filter @site/with-vue2 dev",
    "dev:vue3": "pnpm run --filter @site/with-vue3 dev",
    "build": "pnpm run --filter '*' build",
    "build:packages": "pnpm run --filter './packages/*' build",
    "build:sites": "pnpm run --filter './site/*' build",
    "build:store": "pnpm run --filter @ak2021/store build",
    "build:ui": "pnpm run --filter @ak2021/react-ui build",
    "build:components": "pnpm run --filter @ak2021/web-components build",
    "build:react": "pnpm run --filter @site/with-react build",
    "build:vue2": "pnpm run --filter @site/with-vue2 build",
    "build:vue3": "pnpm run --filter @site/with-vue3 build",
    "clean": "pnpm run --parallel --filter '*' clean && rimraf node_modules",
    "clean:dist": "rimraf 'packages/*/dist' 'site/*/dist'",
    "lint": "eslint --fix \"packages/*/src/**/*.{ts,tsx,js,jsx,mjs}\" \"site/*/src/**/*.{ts,tsx,js,jsx,mjs}\" \"config/**/*.{js,mjs}\"",
    "lint:check": "eslint \"packages/*/src/**/*.{ts,tsx,js,jsx,mjs}\" \"site/*/src/**/*.{ts,tsx,js,jsx,mjs}\" \"config/**/*.{js,mjs}\"",
    "fmt": "prettier --write \"./**/*.{ts,tsx,js,jsx,mjs,json,md,yml,yaml}\"",
    "fmt:check": "prettier --check \"./**/*.{ts,tsx,js,jsx,mjs,json,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "list": "lerna list",
    "release": "lerna publish",
    "version": "lerna version",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "files": [],
  "keywords": [],
  "author": "ShineShao <xiaoshaoqq@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.13",
    "eslint": "^9.39.2",
    "eslint-config-xx": "^2.1.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lerna": "8.2.4",
    "prettier": "^3.7.4",
    "pretty-quick": "^4.2.2",
    "rimraf": "^6.1.2",
    "rollup": "^4.59.0",
    "ts-jest": "^29.4.6",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=18.3",
    "react": ">=17"
  },
  "publishConfig": {
    "access": "public"
  }
}
