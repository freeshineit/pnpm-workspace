{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "lib": ["es6", "dom", "es2016", "es2017", "dom.iterable", "esnext"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "__tests__",
    ".eslintrc.js",
    ".prettier.js",
    "commitlint.config.js"
  ],
  "exclude": ["node_modules", "dist", "coverage", "docs", "examples", "build"]
}
